{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: install",
			"type": "npm",
			"script": "install",
			"problemMatcher": ["$tsc"],
			"options": {
				"cwd": "${workspaceFolder}/client"
			}
		},
		{
			"label": "npm: build: production",
			"type": "npm",
			"script": "build: production",
			"problemMatcher": ["$tsc"],
			"options": {
				"cwd": "${workspaceFolder}/client"
			}
		},
		{
			"label": "npm: debug: development",
			"type": "npm",
			"script": "debug: development",
			"problemMatcher": ["$tsc"],
			"options": {
				"cwd": "${workspaceFolder}/client"
			}
		},
		{
			"label": "dotnet: build",
			"type": "process",
			"command": "dotnet",
			"args": ["build"],
			"options": {
				"cwd": "${workspaceFolder}/server/src/GameApi"
			},
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "docker: build",
			"type": "shell",
			"command": "docker",
			"args": ["build", "--tag", "aaronshiels/goonsackgames:latest", "."],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "docker: push",
			"type": "shell",
			"command": "docker",
			"args": ["push", "aaronshiels/goonsackgames:latest"],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "terraform: apply",
			"type": "shell",
			"command": "terraform",
			"args": ["apply"],
			"problemMatcher": []
		},
		{
			"label": "aws: sync",
			"type": "shell",
			"command": "aws",
			"args": ["s3", "sync", "./client/dist", "s3://goonsackgames.com"],
			"problemMatcher": []
		}
	]
}
